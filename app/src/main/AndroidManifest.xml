<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.glm">

    <application
        android:name="App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:alwaysRetainTaskState="true"
        >

        <activity
            android:name=".GroceryListView"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity
            android:name=".GroceryListManagerView"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity
            android:name=".ItemCatalogueView"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity
            android:name=".ItemTypeView"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".MenuView"
            android:theme="@style/AppTheme.NoActionBar"
                  android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".AndroidDatabaseManager"
                  android:theme="@style/Theme.AppCompat.Light">
        </activity>

        <activity
            android:name=".SplashView"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>